{% extends '::base.html.twig' %}
{% block content %}
<div autoscroll="false" class="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <!-- START panel-->
            <div class="panel panel-default">
                <div class="panel-heading"><h1>Vartotojas : {{ user.getFullName() }} </h1></div>
                <div class="panel-body">
                    <img role="button" alt="Image"
                         class='img-thumbnail img-circle thumb48'
                         src='{{ user.profilePicture }}'
                         data-content="{{ user.fullName }}"
                         data-container="body" data-toggle="popover"
                         data-placement="top"
                         data-trigger="focus">
                    <div><h3>El. paštas:</h1> {{ user.email }}</div>
                    <div><h3>Vardas:</h1> {{ user.firstName }}</div>
                    <div><h3>Pavardė:</h1> {{ user.lastName }}</div>
                    <div><h3>Lytis:</h1> {{ user.gender }}</div>
                    <div><h3>Amžius:</h1> {{ user.age }}</div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}